{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "outDir": "./build",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "alwaysStrict": true
    },
    "include": [
        "ts/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}
